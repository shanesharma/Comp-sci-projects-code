});
onEvent("BacktoregionButton","click", function( ){
  playSound("sound://category_alerts/cartoon_negative_bling.mp3", false);
  setScreen("Regionscreen");
  clearList();
});

// clears the list to keep the code clean and prevent area
function clearList(){
  sortHouseholdIncome = [];
  sortStateArea = [];
  sortStatePopulation = [];
  sortCodeName = [];
  sortNickName = [];
  chosenHouseholdIncome = [];
  chosenStateArea = [];
  chosenStatePopulation = [];
  chosenCodeName = [];
  chosenNickName = [];
  sortList = [];
  chosenState = [];
}
onEvent("InterestingFactsButton", "click", function( ) {
  playSound("sound://category_bell/quriky_trill_bling_positive.mp3", false);
  setScreen("InterestingFactsPage");
  setProperty("interestingfactstitle","text", "The state that you have selected is " + chosenState);
  setProperty("interestingfactstext", "text", "Some interesting facts about your state: " + chosenState + "\nState Population: " + chosenStatePopulation + "\n State Area (size): " + chosenStateArea + "\nAverage household income: " + chosenHouseholdIncome);
});
onEvent("homebutton","click", function( ){
  playSound("sound://category_alerts/cartoon_negative_bling.mp3", false);
  setScreen("Regionscreen");
  clearList();
});
